@model IEnumerable<AdvertisedOn.Models.Business>

@{
    ViewBag.Title = "Index";
}

<h2>List</h2>

<p>
    @if(User.IsInRole("Administrator")){
        @Html.ActionLink("New Business", "Create")
    }
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Information)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Information)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.BusinessId }) |
                @Html.ActionLink("Details", "Details", new { id=item.BusinessId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.BusinessId })
            </td>
        </tr>
    }

</table>
